{% extends 'MainBundle::layout.html.twig' %}
{% block content %}
    <section id="panel">
        <div class="panel">
            <div class="panel-form-first-part full">
                <h1 class="panel-title-form title-login">Welcome to <b>Dandelion</b></h1>            
	            <div class="hostlink">
	                <a href="https://webinar.ucbdandelion.com/admin/" class="btn btn-info btn-lg" target="_blank" role="button">I am hosting a webinar</a> 
	                <a href="https://visit.ucbdandelion.com/admin/" class="btn btn-info web-host-btn btn-lg" target="_blank" role="button">I am hosting a 1:1</a>
	            </div>
             </div>
            <div class="panel-form-second-part">
                <h2 class="title-please-login-in">Please <b>Log In</b></h2>     
                <form role="form" method="post" action="{{action}}">
                    <input type="hidden" name="service" value="{{service}}" />
                    <input type="hidden" name="_flowId" value="loginext-webflow">
                    <input type="hidden" name="errorRedirectUrl" value="{{error_redirection}}"> 
                    {% if(display_error) %}
                    <div class="alert alert-danger">
                        Invalid email or password
                    </div>
                    {% endif %}
                    {% if app.session.getFlashBag.has('success')  %}
                    <div class="alert alert-success">
                        {{ app.session.getFlashBag.get('success')[0] }}
                    </div>
                    {% endif %}

                    <div class="form-group input-group">
                    <span class="input-group-addon" id="user-id"><i class="fa fa-user fa-lg"></i></span>
                        <input name="login" type="text" class="form-control input-lg" placeholder="USER ID" aria-describedby="user-id">
                    </div>
                    <div class="form-group input-group">
                    <span class="input-group-addon" id="password"><i class="fa fa-lock fa-lg"></i></span>
                        <input name="password" type="password" class="form-control input-lg" placeholder="PASSWORD" aria-describedby="user-id">
                    </div>
                    <div class="row button-group">  
                        <div class="col-xs-12 col-sm-4 col-md-4 col-lg-4 button-group text-right no-pad pull-right">
                            <button type="submit" class="btn btn-primary btn-lg btn-enter-button">Enter</button>
                        </div>                     
                        <div class="col-xs-12 col-sm-8 col-md-8 col-lg-8 user-links no-pad pull-right">
                            <a href="{{path('forgotten_password')}}" title="Forgot password?">Forgot password?</a><br />
                            <a href="{{register}}" title="Register an account" target="_blank">Register an account</a>
                        </div>
                    </div>
                </form>
            </div>
            <div class="row footer">
                <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6"><a href="{{privacy}}" title="Privacy Policy" target="_blank">Privacy Policy</a></div>
            </div>
        </div>
    </section>
{% endblock %}
