{% extends 'MainBundle::layout.html.twig' %}
{% block title %}
    Forgot Password | UCB Dandelion
{% endblock %}
{% block content %}
    <section id="panel">
        <div class="panel">

            <div class="panel-form-first-part full">
                <h1 class="panel-title-form">You have forgot your <strong>password</strong>?</h1>
                
            </div>

            <div class="panel-form-second-part forgotten">
                <p>We can send you a link to reset your<br /> password</p>
                
                <form role="form" method="post" action="{{action}}">
                    {% set error = false %}

                    {% if app.session.getFlashBag.has('error')  %}
                        {% set error = true %}
                    <div class="alert alert-danger">
                        {{ app.session.getFlashBag.get('error')[0] }}
                    </div>
                    {% endif %}

                   <div><label>Please enter your email address:</label></div>
                        
                    <div class="form-group input-group">
                        <span class="input-group-addon" id="email">
                        <i class="fa fa-envelope fa-lg"></i></span>
                        <input name="email" type="text" class="form-control {{ error and email|length ? ' error'}}" placeholder="Email address" aria-describedby="email" value="{{email}}">
                    </div>
                    
                    <div class="row button-group text-right">
                        <a class="btn btn-default btn-lg" href="{{path('homepage')}}">CANCEL</a>
                        <button type="submit" class="btn btn-primary btn-lg btn-submit">Enter</button>
                    </div>

                </form>
            </div>

            <div class="row footer">
                <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6"><a href="{{privacy}}" title="Privacy Policy" target="_blank">Privacy Policy</a></div>
            </div>
        </div>
    </section>
{% endblock %}
