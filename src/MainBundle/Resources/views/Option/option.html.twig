{% extends 'MainBundle::layout.html.twig' %}

{% block modulejavascripts %}
    <script type="text/javascript">
        var ajax_set_user_timezone_url = "{{ path('ajax_set_user_timezone') }}";
    </script>
    <script src="{{ asset('bundles/main/js/local_timezone.min.js') }}" type="text/javascript"></script>
{% endblock %}

{% block content %}
    <section id="panel">
        <div class="panel">
            <div class="panel-form-first-part">
                <a href="{{ path('logout') }}" id="logout" title="Logout">Log out</a>
                <h1 class="panel-title-form">Welcome back to your personal Dandelion Space, <b>Dr. {{ app.user.getUsername()|capitalize }} </b></h1>
            </div>
            <nav class="panel-form-second-part">
                <div class="visible-xs">
                    <div class="margin-top-30px"></div>
                </div>
                <h2 class="title-option"><b>Option page</b></h2>
                <h3>Please select a service we can help you with.</h3>
                <a href="{{ path('invitation') }}" title="" class="option_margintop">
                    <div class="block-button">
                        <div class="row">
                            <div class="col-xs-3 col-sm-3 col-md-3 col-lg-3">
                                <img src="{{ asset('bundles/main/images/option_receiveinfo.png') }}" />
                            </div>
                            <div class="col-xs-9 col-sm-9 col-md-9 col-lg-9 special">
                                <strong>I would like</strong> to receive 1:1 Medical Information From  A UCB Medical Specialist
                            </div>
                        </div>

                    </div>
                </a>
                <a href="https://visit.ucbdandelion.com/index2.php{{webinar_params}}" title="Visit - UCB Dandelion" class="option_margintop">
                    <div class="block-button">
                        <div class="row">
                            <div class="col-xs-3 col-sm-3 col-md-3 col-lg-3">
                                <img src="{{ asset('bundles/main/images/option_11_now.png') }}" />
                            </div>
                            <div class="col-xs-9 col-sm-9 col-md-8 col-lg-8">
                                <strong>I have an appointment</strong> for a 1:1 remote presentation <strong>now</strong>
                            </div>
                        </div>
                    </div>
                </a>
                <a href="{{ path('remote_patient_option') }}" title="Patient Education" class="patient_education">
                    <div class="block-button">
                        <div class="row">
                            <div class="col-xs-3 col-sm-3 col-md-3 col-lg-3 padding-top-0px">
                                <img src="{{ asset('bundles/main/images/option_calendar.png') }}" />
                            </div>
                            <div class="col-xs-9 col-sm-9 col-md-9 col-lg-9">
                                <strong>I need to set/manage/host patient education sessions</strong>
                            </div>
                        </div>
                    </div>
                </a>
                <a href="https://webinar.ucbdandelion.com/index2.php{{webinar_params}}" title="Webinar - UCB Dandelion" class="option_margintop">
                    <div class="block-button">
                        <div class="row">
                            <div class="col-xs-3 col-sm-3 col-md-3 col-lg-3">
                                <img src="{{ asset('bundles/main/images/option_webinar_now.png') }}" />
                            </div>
                            <div class="col-xs-9 col-sm-9 col-md-8 col-lg-8">
                                <strong>I have an appointment</strong> For a Webinar Presentation <strong>now</strong>
                            </div>
                        </div>
                    </div>
                </a>
            </nav>
            <div class="row footer">
                <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6"><a href="{{privacy}}" title="Privacy Policy" target="_blank">Privacy Policy</a></div>
            </div>
        </div>
    </section>
{% endblock %}
